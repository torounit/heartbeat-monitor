{
  "name": "heartbeat-monitor",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "dev": "vite",
    "build": "vite build --mode client && vite build",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "generate-migration": "drizzle-kit generate",
    "migrate:local": "wrangler d1 migrations apply heartbeat-monitor --local",
    "migrate:remote": "wrangler d1 migrations apply heartbeat-monitor --remote",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write .",
    "tsc": "npx tsc --noEmit"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.11.1",
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.2",
    "@hono/eslint-config": "^2.0.3",
    "@hono/vite-build": "^1.8.0",
    "@hono/vite-dev-server": "^0.24.0",
    "@types/node": "^25.0.3",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vite": "^7.3.0",
    "vitest": "~3.2.0",
    "wrangler": "^4.55.0"
  }
}
