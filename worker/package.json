{
  "name": "heartbeat-monitor",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "test": "vitest run",
    "dev": "vite",
    "build": "vite build --mode client && vite build",
    "preview": "npm run build && wrangler dev --test-scheduled",
    "deploy": "npm run build && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "generate-migration": "drizzle-kit generate",
    "migrate:local": "wrangler d1 migrations apply heartbeat-monitor --local",
    "migrate:remote": "wrangler d1 migrations apply heartbeat-monitor --remote",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write .",
    "tsc": "npx tsc --noEmit",
    "seed": "tsx scripts/seed.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@tailwindcss/vite": "^4.1.18",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "tailwindcss": "^4.1.18",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.0",
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.2",
    "@hono/eslint-config": "^2.0.4",
    "@hono/vite-build": "^1.8.0",
    "@hono/vite-dev-server": "^0.24.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.3",
    "better-sqlite3": "^12.5.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vite": "^7.3.1",
    "vitest": "~3.2.4",
    "wrangler": "^4.58.0"
  }
}
